  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "outDir": "./out",
    "types": ["electron-vite/client"]
  },
  "include": [
    "src/renderer/**/*",
    "shared/**/*"
  ]
}
